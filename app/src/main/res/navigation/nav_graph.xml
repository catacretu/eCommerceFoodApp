<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ecommercefoodapp.screens.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/goToProductDetailsFragmentFromHomeFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.ecommercefoodapp.screens.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details">
        <action
            android:id="@+id/goBackToHomeScreen"
            app:destination="@id/homeFragment" />
        <argument
            android:name="foodItem"
            app:argType="com.example.ecommercefoodapp.data.local.model.FoodItemEntity" />
        <action
            android:id="@+id/goToCartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.ecommercefoodapp.screens.CartFragment"
        android:label="CartFragment">
        <action
            android:id="@+id/goToProductDetailsFragmentFromCartFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/go_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/go_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.ecommercefoodapp.screens.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" >
        <action
            android:id="@+id/go_back_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/go_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/go_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/summaryFragment"
        android:name="com.example.ecommercefoodapp.screens.SummaryFragment"
        android:label="fragment_summary"
        tools:layout="@layout/fragment_summary" >
        <action
            android:id="@+id/go_from_summaryFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/go_from_summaryFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
        <action
            android:id="@+id/go_from_summaryFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/go_from_summaryFragment_to_doneFragment"
            app:destination="@id/doneFragment" />
    </fragment>
    <fragment
        android:id="@+id/doneFragment"
        android:name="com.example.ecommercefoodapp.screens.DoneFragment"
        android:label="fragment_done"
        tools:layout="@layout/fragment_done" >
        <action
            android:id="@+id/go_from_done_Fragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>